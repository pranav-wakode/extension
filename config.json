  "cleaningPatterns": [
    {
      "pattern": "^([a-zA-Z0-9_\\-\\s]*?)Copy code\\s*",
      "flags": "i"
    },
    {
      "pattern": "^```[a-zA-Z0-9\\+\\-\\.]*\\n?",
      "flags": "i"
    },
    {
      "pattern": "```\\s*$",
      "flags": "i"
    },
    {
      "pattern": "\\\\n",
      "flags": "g",
      "replacement": "\n"
    },
    {
      "pattern": "\\\\t",
      "flags": "g",
      "replacement": "\t"
    },
    {
      "pattern": "\\\\\\\\",
      "flags": "g",
      "replacement": "\\"
    }
  ]
